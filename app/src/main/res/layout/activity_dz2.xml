<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A5747">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/vertical_flag"
                android:background="@color/red_base_Flag"
                android:gravity="center"
                android:weightSum="3"
                tools:ignore="DisableBaselineAlignment">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white_forFlags"
                    tools:ignore="InefficientWeight,Suspicious0dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/vertical_flag"
                android:background="@color/red_base_Flag"
                android:weightSum="2"
                tools:ignore="DisableBaselineAlignment">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white_forFlags"
                    tools:ignore="InefficientWeight,Suspicious0dp" />
            </LinearLayout>

            <LinearLayout
                style="@style/horizontal_flag"
                android:background="@color/red_base_Flag"
                android:baselineAligned="false"
                android:weightSum="3">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green_Flag" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white_forFlags" />
            </LinearLayout>

            <LinearLayout
                style="@style/vertical_flag"
                android:background="@color/red_Columbia"
                android:weightSum="4"
                tools:ignore="DisableBaselineAlignment">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@color/yellow_Columbia"
                    tools:ignore="Suspicious0dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/blue_Columbia"
                    tools:ignore="Suspicious0dp" />

            </LinearLayout>

            <RelativeLayout
                style="@style/base_flag"
                android:background="@color/white_forFlags">

                <FrameLayout
                    android:id="@+id/red_color_fragment"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/red_base_Flag" />

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_below="@id/red_color_fragment"
                    android:layout_alignParentEnd="true"
                    android:background="@color/green_Flag" />

            </RelativeLayout>

            <LinearLayout
               style="@style/vertical_flag"
                android:background="#391974"
                android:weightSum="6">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red_Thailand"
                    tools:ignore="Suspicious0dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white_forFlags"
                    tools:ignore="Suspicious0dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white_forFlags" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/red_Thailand" />
            </LinearLayout>

            <RelativeLayout
                style="@style/base_flag"
                android:background="@color/red_Denmark">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="70dp"
                    android:background="#FFFF" />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="60dp"
                    android:background="@color/white_forFlags" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>